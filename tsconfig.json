{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
            "esModuleInterop": true,
            "target": "es6",
            "noImplicitAny": true,
            "moduleResolution": "node",
            "sourceMap": true,
            "outDir": ".",
            "baseUrl": ".",
            "paths": {
                "*": [
                    "node_modules/*",
                    "src/types/*"
                ]
            }
    },
    "exclude": [
        "node_modules"
    ]
}